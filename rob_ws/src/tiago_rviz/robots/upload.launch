<launch>
  <arg name="laser_model"/>
  <arg name="rgbd_sensors"/>
  <arg name="multi" default=""/>

  <!-- Robot description -->
  <param name="robot_description" command="
    xacro '$(find tiago_rviz)/robots/pmb2.urdf.xacro'
      laser_model:=$(arg laser_model)
      rgbd_sensors:=$(arg rgbd_sensors)
      $(arg multi)"
  />

  <!-- Joint limits -->
  <rosparam command="load" file="$(find tiago_rviz)/config/joint_limits.yaml"/>
</launch>
